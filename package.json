{
    "name": "ai-chat-app",
    "version": "1.0.0",
    "description": "人工智能聊天应用",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "dev": "electron .",
        "build": "electron-builder"
    },
    "build": {
        "appId": "com.bt.aichat",
        "win": {
            "icon": "assets/icon.png",
            "target": "nsis"
