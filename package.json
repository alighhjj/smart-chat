    "repository": "https://github.com/alighhjj/smart-chat",
    "keywords": [
        "Electron",
        "AI",
        "Chat",
        "React"
    ],
    "author": "GitHub",
    "license": "CC0-1.0",
    "devDependencies": {
        "electron": "^35.1.5",
        "electron-builder": "^26.0.12"
    },
    "dependencies": {
        "highlight.js": "^11.11.1",
        "marked": "^15.0.8",
        "react": "^18.2.0",
        "react-dom": "^18.2.0"
    }
}
